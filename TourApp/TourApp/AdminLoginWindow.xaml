<Window x:Class="TourApp.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourApp"
        mc:Ignorable="d"
        Title="Авторизація" Height="300" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="19" Name="loginInput"/>
        <Label Content="Логін" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top"/>
        <Button Content="Увійти" HorizontalAlignment="Left" Margin="35,191,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Login"/>
        <Button Content="Зареєструватися" HorizontalAlignment="Left" Margin="165,191,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Register"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" Width="229"  Name="passwordInput"/>

    </Grid>
</Window>
